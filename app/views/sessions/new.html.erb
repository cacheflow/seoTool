<div class="container toggle-form ">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1>Sign in</h1>   
      <%= form_for(:session, url: sessions_path) do |f| %>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
            <%= f.text_field :email, :class => "form-control",:placeholder => "Email" %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
          </div>
          <a class="pull-right" style='color:#9C6D35;' href="#">Forgot password?</a>
        </div>
        <%= f.button "Sign in", :class => "btn btn-lg btn-primary btn-block", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Signing in..."} %>
      <% end %>
      <br>
      <p> 
        <div class="text-center">Don't have an account yet?</div>
      </p>
       <%= link_to "Sign up now!", new_user_path, :class => "btn btn-default-outline btn-block", style: 'color:#9C6D35;' %>
    </div>
  </div>
</div>
